<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Pos?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <VBox alignment="CENTER" spacing="20" styleClass="login-container">
        <Text text="Spotify Login" styleClass="login-title" />
        <TextField fx:id="usernameField" promptText="Usuário" styleClass="login-field" />
        <PasswordField fx:id="passwordField" promptText="Senha" styleClass="login-field" />
        <Button fx:id="loginButton" text="Entrar" onAction="#handleLogin" styleClass="login-button"/>
        <Text text="Não possui conta ainda?" styleClass="register-text" />
        <Button fx:id="registerButton" text="Cadastrar" onAction="#handleLogin" styleClass="register-button" />
    </VBox>
</StackPane>
