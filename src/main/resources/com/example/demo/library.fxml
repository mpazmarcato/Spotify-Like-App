<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.HBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AppController" spacing="15">
    <!-- Playlist Section Title -->
    <Label text="Suas Playlists" styleClass="section-title">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <!-- Playlists List -->
    <ListView fx:id="playlistList" prefHeight="300.0" prefWidth="864.0">
        <!-- Definindo padding com a sintaxe correta -->
        <padding>
            <Insets top="20.0" left="20.0" right="20.0" bottom="20.0"/>
        </padding>
    </ListView>

    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="cancelButton" onAction="#handleCancel"
            styleClass="cancel-button" text="Cancelar" />
    </HBox>
</VBox>
