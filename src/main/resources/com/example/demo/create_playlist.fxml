<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Pos?>

<StackPane prefHeight="696.0" prefWidth="1064.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AppController">

    <children>
        <!-- Tela de Criar Nova Playlist -->
        <VBox fx:id="createPlaylistPane" alignment="CENTER" spacing="20" styleClass="playlist-container" visible="true">
            <children>
                <Text styleClass="playlist-title" text="Criar Nova Playlist" />
                <TextField fx:id="playlistNameField" promptText="Nome da Playlist" styleClass="playlist-field" />
                <Button fx:id="createPlaylistButton" onAction="#handleCreatePlaylist" styleClass="playlist-button" text="Criar Playlist" />
                <Text styleClass="feedback-text" fx:id="feedbackLabel" />
            </children>
        </VBox>
    </children>

</StackPane>
