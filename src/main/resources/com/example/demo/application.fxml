<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="696.0" prefWidth="1064.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AppController">
    <top>
        <HBox alignment="CENTER" prefHeight="33.0" prefWidth="580.0" spacing="10" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="searchField" prefHeight="25.0" prefWidth="248.0" promptText="Pesquise por playlists, músicas ou podcasts" />
                <Button fx:id="searchButton" onAction="#handleSearchButtonClick" styleClass="nav-button" text="Buscar" />
            </children>
        </HBox>
    </top>

    <!-- Barra de navegação à esquerda -->
    <left>
        <VBox spacing="10" styleClass="sidebar" prefWidth="200.0">
            <children>
                <Button fx:id="homeButton" styleClass="nav-button" text="Home" />
                <Button fx:id="libraryButton" styleClass="nav-button" text="Sua Biblioteca" />
                <Button styleClass="nav-button" text="Configurações" />
                <Button text="Criar Podcast" styleClass="nav-button" onAction="#handleCreatePodcast" />
                <Button text="Criar Playlist" styleClass="nav-button" onAction="#handleCreatePlaylist" />
            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="15">
            <children>
                <!-- Seção de busca e resultados -->
                <Label fx:id="contentLabel" text="Sua Biblioteca" styleClass="section-title" />
                <ListView fx:id="resultListView" />

                <!-- Seção de recomendações -->
                <Text styleClass="section-title" text="Recomendações" />
                <HBox spacing="10">
                    <children>
                        <ImageView fx:id="playlistImage1" fitHeight="100" fitWidth="100" />
                        <ImageView fx:id="playlistImage2" fitHeight="100" fitWidth="100" />
                        <ImageView fx:id="playlistImage3" fitHeight="100" fitWidth="100" />
                    </children>
                </HBox>

                <!-- Seção Tocando Agora -->
                <Text styleClass="section-title" text="Tocando Agora" />
                <ListView fx:id="nowPlayingList" />
            </children>
        </VBox>
    </center>

    <!-- Player de música -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" styleClass="music-player">
            <children>
                <Button text="&lt;&lt;" />
                <Button text="Play" />
                <Button text="&gt;&gt;" />
                <Text fx:id="currentSongText" styleClass="song-text" />
            </children>
        </HBox>
    </bottom>

</BorderPane>
