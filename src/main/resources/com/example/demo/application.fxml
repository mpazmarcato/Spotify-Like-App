<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="696.0" prefWidth="1064.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AppController">
    <!-- Top Section -->
    <top>
        <HBox alignment="CENTER" prefHeight="33.0" prefWidth="580.0" spacing="10" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="searchField" prefHeight="25.0" prefWidth="248.0" promptText="Pesquise por playlists, músicas ou podcasts" />
                <Button fx:id="searchButton" onAction="#handleSearchButtonClick" styleClass="nav-button" text="Buscar" />
            </children>
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox prefWidth="200.0" spacing="10" styleClass="sidebar">
            <children>
                <Button onAction="#handleProfileButton" styleClass="nav-button" text="Perfil" />
                <Button onAction="#handleLibraryButton" styleClass="nav-button" text="Sua Biblioteca" />
                <Button onAction="#handleCreatePodcast" styleClass="nav-button" text="Criar Podcast" />
                <Button onAction="#handleCreatePlaylist" styleClass="nav-button" text="Criar Playlist" />
                <Button fx:id="leaveButton" onAction="#handleLeaveButton" styleClass="nav-button" text="Sair" />
            </children>
        </VBox>
    </left>

    <!-- Center Section -->
    <center>
        <VBox spacing="15">
            <children>
                <!-- Section for Playlists -->
                <VBox alignment="CENTER" fillWidth="false" prefHeight="0.0" prefWidth="164.0" spacing="10.0">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </VBox>

                <!-- Section for Songs -->
                <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                    <children>
                        <Label text="Músicas">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                        <ListView fx:id="songList" onMouseClicked="#handleSongSelection" prefHeight="181.0" prefWidth="864.0" />
                    </children>
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                </VBox>

                <!-- Recommendations Section -->
                <Text styleClass="section-title" text="Recomendações" />

                <!-- Recent Songs Section (newly added) -->
                <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                    <children>
                        <Label text="Músicas Recentes">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                        <ListView fx:id="recentSongsList" prefHeight="79.0" prefWidth="864.0" />
                    </children>
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                </VBox>

                <!-- Now Playing Section -->
                <Text styleClass="section-title" text="Tocando Agora" />
                <ListView fx:id="nowPlayingList" prefHeight="27.0" prefWidth="864.0" />
            </children>
        </VBox>
    </center>

    <!-- Music Player Controls -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" styleClass="music-player">
            <children>
                <Button onAction="#handlePreviousSong" text="&lt;&lt;" />
                <Button fx:id="toggleButton" onAction="#handleTogglePlayPause" text="Play/Pause" />
                <Button onAction="#handleNextSong" text="&gt;&gt;" />
                <Label fx:id="timeLabel" text="00:00"/>
                <Slider fx:id="timeSlider" HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </HBox>
    </bottom>

</BorderPane>
